@model Inredningsbutik.Web.ViewModels.HomeIndexVm

<div class="page-wrap">

<!-- HERO (editorial) -->
<section class="hero-editorial mb-4 fade-up">
    <div class="hero-editorial__inner">
        <!-- Vänster: text -->
        <div class="hero-editorial__copy">
            <h1 class="hero-editorial__title">Skandinavisk inredning</h1>
            <p class="hero-editorial__lead">
                Upptäck noga utvalda detaljer för ett lugnt, stilrent hem. Handplockat för en tidlös känsla.
            </p>

            <a class="btn btn-outline-dark hero-editorial__cta" href="#produkter">
                Handla här
            </a>
        </div>

        <!-- Höger: bilder -->
        <div class="hero-editorial__media" aria-hidden="true">
            <div class="hero-editorial__img hero-editorial__img--left">
                <img src="/images/hero/hero3.jpg" alt="" />
            </div>

            <div class="hero-editorial__img hero-editorial__img--right">
                <img src="/images/hero/hero1.jpg" alt="" />
            </div>

            <a class="hero-editorial__link" href="#din-sektion-sen">
                Visa hela utbudet <span aria-hidden="true">→</span>
            </a>
        </div>
    </div>
</section>

    <!-- PRODUKTER -->
<div id="productResults">

    <div class="d-flex justify-content-between align-items-end mb-2 fade-up" id="produkter">
        <div>
            <h2 class="mb-0">Produkter</h2>
            <div class="text-muted">Visar @Model.Products.Count st</div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Q) || Model.CategoryId.HasValue)
        {
            <a class="btn btn-link" asp-controller="Home" asp-action="Index">Rensa filter</a>
        }
    </div>

    <div class="row g-3">
        @foreach (var p in Model.Products)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3 fade-up">
                <div class="product-card">
                    <a asp-controller="Catalog" asp-action="Details" asp-route-id="@p.Id" style="text-decoration:none; color:inherit;">
                        <div class="product-media">
                            <img class="base" src="@(string.IsNullOrWhiteSpace(p.ImageUrl) ? "/images/placeholder.jpg" : p.ImageUrl)" alt="@p.Name" />
                            <img class="hover" src="@(string.IsNullOrWhiteSpace(p.HoverImageUrl) ? (string.IsNullOrWhiteSpace(p.ImageUrl) ? "/images/placeholder.jpg" : p.ImageUrl) : p.HoverImageUrl)" alt="@p.Name inspirationsbild" />
                        </div>

                        <div class="product-body">
                            <div class="product-title">@p.Name</div>
                            <div class="product-meta">
                                <span>@p.Category?.Name</span>
                                <span><strong>@p.Price.ToString("0.00") kr</strong></span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>

</div>
