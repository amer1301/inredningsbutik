@{
    ViewData["Title"] = "Kundtjänst";
}

<div class="container py-4 customer-service">
    <div class="text-center mb-4">
        <h1 class="cs-title">KUNDTJÄNST</h1>
        <p class="cs-lead">
            Här kan du hitta svar på vanliga frågor. Välj ett ämne till vänster.
        </p>
    </div>

    <div class="row g-4">
        <!-- Vänsterspalt -->
        <div class="col-12 col-lg-4">
            <div class="cs-nav">
                <button class="cs-nav-item is-active" type="button" data-section="kontakt">
                    <img class="cs-icon" src="~/images/icons/kontaktikon.png" alt="" />
                    <span>Kontakt</span>
                </button>

                <button class="cs-nav-item" type="button" data-section="populara">
                    <img class="cs-icon" src="~/images/icons/frågorikon.png" alt="" />
                    <span>Populära frågor</span>
                </button>

                <button class="cs-nav-item" type="button" data-section="leveranser">
                    <img class="cs-icon" src="~/images/icons/leveranserikon.png" alt="" />
                    <span>Leveranser</span>
                </button>

                <button class="cs-nav-item" type="button" data-section="retur">
                    <img class="cs-icon" src="~/images/icons/återbetikon.png" alt="" />
                    <span>Retur &amp; Återbetalning</span>
                </button>

                <button class="cs-nav-item" type="button" data-section="reklamation">
                    <img class="cs-icon" src="~/images/icons/reklamationerikon.png" alt="" />
                    <span>Reklamation</span>
                </button>

                <button class="cs-nav-item" type="button" data-section="betalning">
                    <img class="cs-icon" src="~/images/icons/fakturaikon.png" alt="" />
                    <span>Betalning &amp; Faktura</span>
                </button>
            </div>
        </div>

        <!-- Högerinnehåll -->
        <div class="col-12 col-lg-8">
            <!-- Kontakt -->
            <section class="cs-section" data-section="kontakt">
                <h2 class="cs-h2">Kontakt</h2>
                <div class="card cs-card">
                    <div class="card-body">
                        <p class="mb-2"><strong>E-post:</strong> support@persdotter.se</p>
                        <p class="mb-2"><strong>Telefon:</strong> 08-123 45 67</p>
                        <p class="mb-0"><strong>Öppettider:</strong> Mån–Fre 10–15</p>
                    </div>
                </div>
            </section>

            <!-- Populära frågor -->
            <section class="cs-section d-none" data-section="populara">
                <h2 class="cs-h2">Populära frågor</h2>

                <div class="accordion" id="accPopulara">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="p1h">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#p1">
                                Hur lång är leveranstiden?
                            </button>
                        </h2>
                        <div id="p1" class="accordion-collapse collapse" data-bs-parent="#accPopulara">
                            <div class="accordion-body">
                                Normalt 1–3 arbetsdagar beroende på lagerstatus och fraktalternativ.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="p2h">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#p2">
                                Kan jag ändra min order efter att jag lagt den?
                            </button>
                        </h2>
                        <div id="p2" class="accordion-collapse collapse" data-bs-parent="#accPopulara">
                            <div class="accordion-body">
                                Kontakta kundtjänst så fort som möjligt, så försöker vi hjälpa innan ordern packas.
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Leveranser -->
            <section class="cs-section d-none" data-section="leveranser">
                <h2 class="cs-h2">Leveranser</h2>

                <div class="accordion" id="accLeveranser">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="l1h">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#l1">
                                Vilka fraktalternativ erbjuder ni?
                            </button>
                        </h2>
                        <div id="l1" class="accordion-collapse collapse" data-bs-parent="#accLeveranser">
                            <div class="accordion-body">
                                Vi erbjuder hemleverans och ombud (beroende på ort). Fraktkostnad visas i kassan.
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Retur -->
            <section class="cs-section d-none" data-section="retur">
                <h2 class="cs-h2">Retur &amp; Återbetalning</h2>

                <div class="accordion" id="accRetur">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="r1h">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#r1">
                                Hur gör jag en retur?
                            </button>
                        </h2>
                        <div id="r1" class="accordion-collapse collapse" data-bs-parent="#accRetur">
                            <div class="accordion-body">
                                Skicka ett mail till kundtjänst med ordernummer, så skickar vi instruktioner och returetikett (om aktuellt).
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Reklamation -->
            <section class="cs-section d-none" data-section="reklamation">
                <h2 class="cs-h2">Reklamation</h2>

                <div class="accordion" id="accReklamation">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="rk1h">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#rk1">
                                Min vara är trasig – vad gör jag?
                            </button>
                        </h2>
                        <div id="rk1" class="accordion-collapse collapse" data-bs-parent="#accReklamation">
                            <div class="accordion-body">
                                Kontakta oss med bilder och ordernummer. Vi återkommer med lösning (ersättning/återbetalning).
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Betalning -->
            <section class="cs-section d-none" data-section="betalning">
                <h2 class="cs-h2">Betalning &amp; Faktura</h2>

                <div class="accordion" id="accBetalning">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="b1h">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#b1">
                                Vilka betalningssätt kan jag välja?
                            </button>
                        </h2>
                        <div id="b1" class="accordion-collapse collapse" data-bs-parent="#accBetalning">
                            <div class="accordion-body">
                                Kort, direktbetalning och faktura (beroende på din checkout). Exakta alternativ visas i kassan.
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>

@section Scripts {
<script>
    (function () {
        const navItems = document.querySelectorAll(".cs-nav-item");
        const sections = document.querySelectorAll(".cs-section");

        function show(sectionKey) {
            sections.forEach(s => s.classList.toggle("d-none", s.dataset.section !== sectionKey));
            navItems.forEach(b => b.classList.toggle("is-active", b.dataset.section === sectionKey));
            window.scrollTo({ top: 0, behavior: "smooth" });
        }

        navItems.forEach(btn => {
            btn.addEventListener("click", () => show(btn.dataset.section));
        });
    })();
</script>
}
