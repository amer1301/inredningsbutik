@model Inredningsbutik.Web.Models.Cart

@{
    ViewData["Title"] = "Varukorg";
}

<h1>Varukorg</h1>

@if (!Model.Items.Any())
{
    <p>Din varukorg är tom.</p>
    <a class="btn btn-primary" asp-area="" asp-controller="Catalog" asp-action="Index">Till produkter</a>
    return;
}

<table class="table align-middle">
    <thead>
        <tr>
            <th>Produkt</th>
            <th class="text-end">Pris</th>
            <th style="width: 180px;">Antal</th>
            <th class="text-end">Radtotal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr class="cart-row">
            <td>@item.Name</td>

            <td class="text-end">@item.UnitPrice.ToString("0.00")</td>

            <td>
                @* Vi behåller en form här för AntiForgeryToken + hidden productId (JS postar till UpdateQuantity) *@
                <form method="post" class="d-flex gap-2 align-items-center">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@item.ProductId" />

                    <input class="form-control cart-qty"
                           type="number"
                           name="quantity"
                           value="@item.Quantity"
                           min="0"
                           data-product-id="@item.ProductId" />
                </form>
            </td>

            <td class="text-end cart-line-total">
                @((item.UnitPrice * item.Quantity).ToString("0.00"))
            </td>

            <td class="text-end">
                <form asp-action="Remove" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@item.ProductId" />
                    <button class="btn btn-sm btn-outline-danger" type="submit">Ta bort</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center">
    <strong>Total: <span id="cartTotal">@Model.Total.ToString("0.00")</span> kr</strong>
    <a class="btn btn-success" asp-area="" asp-controller="Checkout" asp-action="Index">Till kassan</a>
</div>
