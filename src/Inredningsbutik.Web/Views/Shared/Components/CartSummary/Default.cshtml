@model Inredningsbutik.Web.Models.Cart

<a class="nav-link text-dark cart-icon-link" asp-area="" asp-controller="Cart" asp-action="Index" aria-label="Varukorg">
    <span class="cart-icon" aria-hidden="true">
        <svg width="22" height="22" viewBox="0 0 24 24" fill="none"
             xmlns="http://www.w3.org/2000/svg">
            <path d="M7 9V7a5 5 0 0 1 10 0v2" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
            <path d="M6.5 9h11l1 12H5.5l1-12Z" stroke="currentColor" stroke-width="1.8" stroke-linejoin="round"/>
        </svg>
    </span>
@if (Model.TotalItems > 0)
{
    <span class="cart-badge" aria-label="@Model.TotalItems varor i varukorgen"></span>
}

</a>
