@model Inredningsbutik.Core.Entities.Order
@{
    ViewData["Title"] = $"Order #{Model.Id}";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="h3 mb-1">Order #@Model.Id</h1>
        <div class="text-muted">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm") • <span class="badge text-bg-secondary">@Model.Status</span></div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">Tillbaka</a>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
            <thead>
            <tr>
                <th>Produkt</th>
                <th class="text-end">Antal</th>
                <th class="text-end">Á-pris</th>
                <th class="text-end">Rad</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var i in Model.OrderItems)
            {
                var line = i.UnitPrice * i.Quantity;
                <tr>
                    <td>@i.Product?.Name</td>
                    <td class="text-end">@i.Quantity</td>
                    <td class="text-end">@i.UnitPrice.ToString("0.00") kr</td>
                    <td class="text-end">@line.ToString("0.00") kr</td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <th colspan="3" class="text-end">Totalt</th>
                <th class="text-end">@Model.TotalAmount.ToString("0.00") kr</th>
            </tr>
            </tfoot>
        </table>
    </div>
</div>
