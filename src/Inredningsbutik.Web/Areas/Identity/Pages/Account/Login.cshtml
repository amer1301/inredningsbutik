@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<div class="identity-page">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="identity-card">
                <h1 class="mb-2">@ViewData["Title"]</h1>
                <p class="text-muted mb-4">Använd ditt konto för att logga in.</p>

                <form id="account" method="post">
                    <hr class="mb-4" />

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">E-post</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password"
                               class="form-control"
                               autocomplete="current-password"
                               aria-required="true"
                               placeholder="Lösenord" />
                        <label asp-for="Input.Password" class="form-label">Lösenord</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">
                            Kom ihåg mig
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                        Logga in
                    </button>

                    <div class="mt-4">
                        <p class="mb-2">
                            <a id="forgot-password" asp-page="./ForgotPassword">Glömt lösenord?</a>
                        </p>
                        <p class="mb-2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Skapa ett konto</a>
                        </p>
                        <p class="mb-0">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Skicka bekräftelsemail igen</a>
                        </p>
                    </div>
                </form>

                @* Externa inloggningar (om du använder t.ex. Google) *@
                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="mt-4">
                        <hr class="my-4" />
                        <h2 class="h5 mb-3">Eller logga in med</h2>

                        <form id="external-account"
                              asp-page="./ExternalLogin"
                              asp-route-returnUrl="@Model.ReturnUrl"
                              method="post">
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit"
                                            class="btn btn-primary"
                                            name="provider"
                                            value="@provider.Name"
                                            title="Logga in med @provider.DisplayName">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
