@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Återställ lösenord";
}

<div class="identity-page">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="identity-card card">
                <div class="card-body p-4 p-md-5">
                    <h1 class="mb-2">Återställ lösenord</h1>
                    <p class="text-muted mb-4">
                        Välj ett nytt lösenord för ditt konto.
                    </p>

                    <form method="post" novalidate>
                    @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        @* Behåll hidden fields om de finns i din scaffold (brukar vara Code + Email).
                           Om din befintliga fil har dessa, behåll dem:
                           <input asp-for="Input.Code" type="hidden" />
                        *@

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="namn@exempel.se" />
                            <label asp-for="Input.Email">E-post</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password"
                                   class="form-control"
                                   autocomplete="new-password"
                                   aria-required="true"
                                   placeholder="Nytt lösenord" />
                            <label asp-for="Input.Password">Nytt lösenord</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword"
                                   class="form-control"
                                   autocomplete="new-password"
                                   aria-required="true"
                                   placeholder="Upprepa lösenord" />
                            <label asp-for="Input.ConfirmPassword">Bekräfta lösenord</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg btn-primary">
                            Spara nytt lösenord
                        </button>

                        <div class="mt-3">
                            <a asp-page="./Login">Tillbaka till inloggning</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
