@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrera";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Skapa konto</h1>
            <p class="auth-subtitle">Skapa ett konto för att kunna lägga beställningar och se dina ordrar.</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
        @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">E-post</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="namn@exempel.se" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Lösenord</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Välj ett lösenord" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label">Bekräfta lösenord</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Upprepa lösenord" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-primary w-100 auth-btn">
                Registrera
            </button>

            <div class="auth-links">
                <span>Har du redan ett konto?</span>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Logga in</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
