@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glömt lösenord";
}

<div class="identity-page">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="identity-card card">
                <div class="card-body p-4 p-md-5">
                    <h1 class="mb-2">Glömt lösenord?</h1>
                    <p class="text-muted mb-4">
                        Ange din e-postadress så skickar vi en länk för att återställa lösenordet.
                    </p>

                    <form method="post" novalidate>
                    @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="namn@exempel.se" />
                            <label asp-for="Input.Email">E-post</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg btn-primary">
                            Skicka återställningslänk
                        </button>

                        <div class="mt-3">
                            <a asp-page="./Login">Tillbaka till inloggning</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
