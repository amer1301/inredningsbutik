@{
    ViewData["Title"] = "Admin";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0">Admin</h1>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h2 class="h5">Produkter</h2>
                <p class="text-muted mb-3">Skapa, redigera och hantera lager.</p>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Products" asp-action="Index">Öppna</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h2 class="h5">Kategorier</h2>
                <p class="text-muted mb-3">Hantera kategorier för sortimentet.</p>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Categories" asp-action="Index">Öppna</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h2 class="h5">Ordrar</h2>
                <p class="text-muted mb-3">Se inkomna ordrar och uppdatera status.</p>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Orders" asp-action="Index">Öppna</a>
            </div>
        </div>
    </div>
</div>
