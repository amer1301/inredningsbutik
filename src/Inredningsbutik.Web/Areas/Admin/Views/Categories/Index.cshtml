@model List<Inredningsbutik.Core.Entities.Category>

@{
    ViewData["Title"] = "Kategorier";
}

<h1>Kategorier</h1>

<p>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Categories" asp-action="Create">Ny kategori</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Slug</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.Slug</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@c.Id">Ã„ndra</a>
