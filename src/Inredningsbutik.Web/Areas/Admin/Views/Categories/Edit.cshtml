@model Category
@{
    ViewData["Title"] = "Redigera kategori";
}

<h1 class="h3">Redigera kategori</h1>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Namn</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Slug" class="form-label">Slug</label>
        <input asp-for="Slug" class="form-control" />
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Spara</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Tillbaka</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
