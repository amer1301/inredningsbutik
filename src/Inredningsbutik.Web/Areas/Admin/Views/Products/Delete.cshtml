@model Inredningsbutik.Core.Entities.Product

@{
    ViewData["Title"] = "Ta bort produkt";
}

<h1>Ta bort produkt</h1>

<div class="alert alert-warning">
    Är du säker på att du vill ta bort <strong>@Model.Name</strong>?
</div>

<dl class="row">
    <dt class="col-sm-3">Kategori</dt>
    <dd class="col-sm-9">@Model.Category?.Name</dd>

    <dt class="col-sm-3">Pris</dt>
    <dd class="col-sm-9">@Model.Price.ToString("0.00")</dd>

    <dt class="col-sm-3">Lager</dt>
    <dd class="col-sm-9">@Model.StockQuantity</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Ja, ta bort</button>
    <a class="btn btn-secondary" asp-action="Index">Avbryt</a>
</form>
